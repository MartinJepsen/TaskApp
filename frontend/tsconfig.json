{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "node",

        // Strict TS mode
        "allowJs": false,
        "checkJs": false,
        "strict": true,

        "declaration": true,
        "outDir": "dist",

        "useDefineForClassFields": true,
        "experimentalDecorators": true,

        "esModuleInterop": true,
        // "skipLibCheck": true,
        // "forceConsistentCasingInFileNames": true},
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}